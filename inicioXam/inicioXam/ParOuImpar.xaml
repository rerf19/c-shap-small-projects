<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="inicioXam.ParOuImpar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="O Vieira é demasiado lindo!!"/>
            <Entry  x:Name="valor" Keyboard="Numeric" Placeholder="Um numero qualquer"/>
            <Button x:Name="btnExecutar"  Text="Executar" Clicked="BtnExecutar_Clicked" />
            <Label x:Name="resultado"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>